load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "pulumix",
    srcs = [
        "apply_state.go",
        "applyn.go",
        "array.go",
        "combinators.go",
        "gen.go",
        "map.go",
        "ptr.go",
        "types.go",
    ],
    importpath = "github.com/pulumi/pulumi/sdk/v3/go/pulumix",
    visibility = ["//visibility:public"],
    deps = [
        "//sdk/go/common/util/contract",
        "//sdk/go/internal",
    ],
)

filegroup(
    name = "pulumix_data",
    srcs = glob(["*.go"]),
    visibility = ["//visibility:public"],
)

alias(
    name = "go_default_library",
    actual = ":pulumix",
    visibility = ["//visibility:public"],
)

go_test(
    name = "pulumix_test",
    srcs = [
        "applyn_test.go",
        "array_test.go",
        "combinators_test.go",
        "context_test.go",
        "map_test.go",
        "ptr_test.go",
        "types_ext_test.go",
        "types_test.go",
    ],
    embed = [":pulumix"],
    deps = [
        "//sdk/go/common/resource",
        "//sdk/go/internal",
        "//sdk/go/pulumi",
        "@com_github_stretchr_testify//assert",
        "@com_github_stretchr_testify//require",
    ],
)
